<script type="text/javascript">
  var sidePanelColor = null;
  var sidePanelActiveColor = null;
  var topPanelColor = null;
  var topPanelActiveColor = null;
  document.body.onmouseup = function() {
    var data = {};
    if(sidePanelColor != null){ 
      data.side_panel_color = sidePanelColor;
      sidePanelColor = null;
    }
    else if(sidePanelActiveColor != null){ 
      data.side_panel_active_color = sidePanelActiveColor;
      sidePanelActiveColor = null;
    }
    else if(topPanelColor != null){ 
      data.top_panel_color = topPanelColor;
      topPanelColor = null;
    }
    else if(topPanelActiveColor != null){ 
      data.top_panel_active_color = topPanelActiveColor;
      topPanelActiveColor = null;
    }
    else {
      return;
    }
    console.log(data);
    $.ajax({
      url: '/conf/',
      type: 'PUT',
      data: JSON.stringify(data),
      success: function(result) {
        console.log(result);
      }
    });
  }

  function setSidePanelColor(picker) {
    sidePanelColor = picker.toString();
  }

  function setSidePanelActiveColor(picker) {
    sidePanelActiveColor = picker.toString();
  }

  function setTopPanelColor(picker) {
    topPanelColor = picker.toString();
  }

  function setTopPanelActiveColor(picker) {
    topPanelActiveColor = picker.toString();
  }
</script>

<!-- change visual configurations modal-->
<div class="modal fade" id="change-visual-configurations-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Theme</h4>
      </div>
      <div class="modal-body">
        <form class="form-signin" action="/conf" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" name="title" class="form-control" value='<%= portal_configuration[:title] %>' autofocus="">
            <input type="text" name="applications_title" class="form-control" value='<%= portal_configuration[:applications_title] %>'>
            <input type="text" name="applications_subtitle" class="form-control" value='<%= portal_configuration[:applications_subtitle] %>'>
            <input type="file" name="applications_background_image" class="form-control filestyle" data-buttonText="Browse">
            <textarea name="applications_welcome_text" class="form-control" rows="5" id="comment" maxlength="300"><%= portal_configuration[:applications_welcome_text] %></textarea>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- change visual configurations modal-->
<div class="modal fade" id="reset-visual-configurations-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Reset Theme</h4>
      </div>
      <div class="modal-body">
        <p>
          This action will reset all the visual configurations to default values.
        </p>
        <form class="form-signin" action="/conf" method="post">
          <div class="form-group">
            <input type="hidden" name="reset" class="form-control" value='true' autofocus="">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Reset</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- load visual configurations modal-->
<div class="modal fade" id="load-visual-configurations-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Load Theme</h4>
      </div>
      <div class="modal-body">
        <p>
          Load one of the following configuration files
        </p>
        <form class="form-signin" action="/conf" method="post">
          <div class="form-group">
            <input type="hidden" name="load" class="form-control" value='true' autofocus="">
            <select id="snapshot-select" name="filename" class="form-control">
            <% config_files.each do |conf_file| %>
              <%= "<option value='#{conf_file}'>#{conf_file.gsub('.yml', '')}</option>" %>
            <% end %>
            </select>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Load</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- save visual configurations modal-->
<div class="modal fade" id="save-visual-configurations-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Save Theme</h4>
      </div>
      <div class="modal-body">
        <form class="form-signin" action="/conf" method="post">
          <div class="form-group">
            <input type="hidden" name="save"   class="form-control" value='true'>
            <input type="text" name="filename" class="form-control" id="filename" aria-describedby="filenameHelp" placeholder="Theme Name" autofocus="" required>
            <small id="filenameHelp" class="form-text text-muted">Please enter the name of the new Theme.</small>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>